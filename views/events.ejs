<main class="flex-1 overflow-auto">
  <div class="p-6 max-w-6xl mx-auto">
    <!-- Page Header (Kept as requested) -->
    <h1 class="text-2xl font-bold text-gray-900 mb-2">
      Discover Campus Events
    </h1>
    <p class="text-gray-500 mb-6">
      Find workshops, competitions, and social gatherings happening across
      campus
    </p>

    <!-- Events Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Event Card 1 -->
      <% events.forEach(event => { %>
      <div
        class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-transform hover:-translate-y-1"
      >
        <% if (event.coverImage) { %>
        <img
          src="<%= event.coverImage %>"
          alt="Event Cover"
          class="w-full h-40 object-cover"
        />
        <% } else { %>
        <div class="h-40 bg-gray-200 flex items-center justify-center">
          <i class="fas fa-calendar text-4xl text-gray-400">No Image</i>
        </div>
        <% } %>

        <div class="p-6">
          <div class="flex justify-between items-start">
            <h2 class="text-xl font-bold text-gray-800">
              <%= event.eventName %>
            </h2>
            <span
              class="bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded-full"
              ><%= event.eventType %>
            </span>
          </div>

          <div class="mt-3 flex items-center text-gray-600">
            <i class="fas fa-calendar-day mr-2 text-indigo-500"></i>
            <span>
              <%= new Date(event.eventDate).toDateString() %> | <%=
              event.startTime %> - <%= event.endTime %>
            </span>
          </div>

          <div class="mt-2 flex items-center text-gray-600">
            <i class="fas fa-map-marker-alt mr-2 text-indigo-500"></i
            ><span><%= event.venue %></span>
          </div>

          <p class="mt-3 text-gray-600 line-clamp-2">
            <%= event.description %>
          </p>

          <a
            href="/events/<%= event._id %>"
            class="mt-4 w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg font-medium transition text-center block"
          >
            View Details
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>
