<main class="flex-1 overflow-auto bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="p-6 max-w-4xl mx-auto">
    <!-- Header -->
    <div
      class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-6 mb-6 text-white shadow-lg"
    >
      <h1 class="text-2xl font-bold flex items-center">
        <i class="fas fa-calendar-plus mr-3"></i>
        Create College Event
      </h1>
    </div>

    <!-- Form Sections -->
    <form action="/create-event" method="POST" enctype="multipart/form-data">
      <div class="space-y-6">
        <!-- Event Cover Section -->
        <div
          class="bg-white rounded-2xl shadow-xl overflow-hidden border border-white/20"
        >
          <div
            class="p-6 border-b border-gray-100 bg-gradient-to-r from-indigo-50 to-purple-50"
          >
            <h2 class="text-lg font-bold text-gray-800 flex items-center">
              <i class="fas fa-image text-indigo-600 mr-3"></i>
              Event Cover Image
            </h2>
            <p class="text-gray-500 text-sm mt-1">
              Upload a high-quality cover (16:9 ratio recommended)
            </p>
          </div>
          <div class="p-6">
            <label
              for="cover-upload"
              class="border-2 border-dashed border-indigo-200 rounded-2xl p-8 flex flex-col items-center justify-center bg-indigo-50 hover:bg-indigo-100 transition cursor-pointer text-center"
            >
              <i
                class="fas fa-cloud-upload-alt text-indigo-400 text-4xl mb-4"
              ></i>
              <p class="text-gray-600 mb-2">Click to upload your image</p>
              <span
                class="px-5 py-2.5 bg-indigo-600 text-white rounded-xl font-medium hover:bg-indigo-700 transition flex items-center shadow-md"
              >
                <i class="fas fa-upload mr-2"></i> Browse Files
              </span>
              <input
                type="file"
                name="coverImage"
                id="cover-upload"
                type="file"
                class="hidden"
                accept="image/png, image/jpeg, image/jpg, image/gif"
                onchange="previewImage(this)"
              />
            </label>
            <img
              id="image-preview"
              src="#"
              alt="Image Preview"
              class="mt-4 rounded-xl shadow-md max-w-full hidden"
            />
          </div>
        </div>

        <!-- Event Details Section -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div
            class="p-6 border-b border-gray-100 bg-gradient-to-r from-indigo-50 to-purple-50"
          >
            <h2 class="text-lg font-bold text-gray-800 flex items-center">
              <i class="fas fa-info-circle text-indigo-600 mr-3"></i>
              Event Information
            </h2>
          </div>
          <div class="p-6 space-y-6">
            <div>
              <label
                class="text-sm font-bold text-gray-700 mb-2 flex items-center"
              >
                <i class="fas fa-heading text-indigo-500 mr-2"></i>
                Event Name <span class="text-red-500 ml-1">*</span>
              </label>
              <input
                type="text"
                name="eventName"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition pl-12 bg-gray-50"
                placeholder="Enter event name"
                required
              />
            </div>

            <div>
              <label
                class="text-sm font-bold text-gray-700 mb-2 flex items-center"
              >
                <i class="fas fa-align-left text-indigo-500 mr-2"></i>
                Description
              </label>
              <textarea
                name="description"
                rows="4"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition pl-12 bg-gray-50"
                placeholder="Describe the event purpose, activities, and any special instructions..."
              ></textarea>
            </div>

            <div>
              <label
                class="text-sm font-bold text-gray-700 mb-2 flex items-center"
              >
                <i class="fas fa-tag text-indigo-500 mr-2"></i>
                Event Type
              </label>
              <select
                name="eventType"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition appearance-none pl-12 bg-gray-50"
              >
                <option>Workshop</option>
                <option>Hackathon</option>
                <option>Tech Competition</option>
                <option>Cultural Event</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Schedule & Venue Section -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div
            class="p-6 border-b border-gray-100 bg-gradient-to-r from-indigo-50 to-purple-50"
          >
            <h2 class="text-lg font-bold text-gray-800 flex items-center">
              <i class="fas fa-map-marked-alt text-indigo-600 mr-3"></i>
              Schedule & Location
            </h2>
          </div>
          <div class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label
                  class="text-sm font-bold text-gray-700 mb-2 flex items-center"
                >
                  <i class="fas fa-clock text-indigo-500 mr-2"></i>
                  Start Time <span class="text-red-500 ml-1">*</span>
                </label>
                <input
                  type="time"
                  name="startTime"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition pl-12 bg-gray-50"
                  required
                />
              </div>
              <div>
                <label
                  class="text-sm font-bold text-gray-700 mb-2 flex items-center"
                >
                  <i class="fas fa-clock text-indigo-500 mr-2"></i>
                  End Time <span class="text-red-500 ml-1">*</span>
                </label>
                <input
                  type="time"
                  name="endTime"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition pl-12 bg-gray-50"
                  required
                />
              </div>
            </div>

            <div>
              <label
                class="text-sm font-bold text-gray-700 mb-2 flex items-center"
              >
                <i class="fas fa-calendar-day text-indigo-500 mr-2"></i>
                Event Date <span class="text-red-500 ml-1">*</span>
              </label>
              <input
                type="date"
                name="eventDate"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition pl-12 bg-gray-50"
                required
              />
            </div>

            <div>
              <label
                class="text-sm font-bold text-gray-700 mb-2 flex items-center"
              >
                <i class="fas fa-location-dot text-indigo-500 mr-2"></i>
                Venue <span class="text-red-500 ml-1">*</span>
              </label>
              <input
                type="text"
                name="venue"
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition pl-12 bg-gray-50"
                placeholder="Enter venue location"
                required
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Publish Button -->
      <div class="mt-8 flex justify-end">
        <button
          class="px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl font-bold hover:from-indigo-700 hover:to-purple-700 transition flex items-center shadow-lg hover:shadow-xl"
        >
          <i class="fas fa-paper-plane mr-2"></i> PUBLISH EVENT
        </button>
      </div>
    </form>
  </div>
</main>
<script src="/js/createEvent.js"></script>
