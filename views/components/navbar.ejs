<!-- Top Navigation Bar -->
<nav
  class="bg-white px-6 py-3 border-b border-gray-200 sticky top-0 z-10 shadow-sm"
>
  <div class="flex items-center justify-between h-16">
    <!-- Left: Logo + Toggle + Links -->
    <div class="flex items-center space-x-4">
      <!-- Mobile Sidebar Toggle -->
      <button
        id="sidebar-toggle"
        class="md:hidden text-gray-500 focus:outline-none"
      >
        <i class="fas fa-bars text-xl"></i>
      </button>

      <!-- Logo -->
      <div class="text-xl font-semibold text-gray-900">EventEase</div>

      <!-- Desktop Nav Links -->
      <div class="hidden md:flex space-x-3 ml-4">
        <a
          href="/events"
          class="px-4 py-2 rounded-md text-sm font-medium transition <%= currentPath === '/events' ? 'bg-indigo-100 text-indigo-800' : 'text-gray-700 hover:bg-gray-100' %>"
        >
          Events
        </a>
        <% if (user && user.role === 'admin') { %>
        <a
          href="/attendee"
          class="px-4 py-2 rounded-md text-sm font-medium transition <%= currentPath === '/attendee' ? 'bg-indigo-100 text-indigo-800' : 'text-gray-700 hover:bg-gray-100' %>"
        >
          Attendees
        </a>
        <% } %>
      </div>
    </div>

    <!-- Right: Create, Search, Account -->
    <div class="flex items-center space-x-4">
      <!-- Create Event Button -->
      <% if (user && user.role === 'admin') { %>
      <a
        href="/create-event"
        class="hidden md:flex items-center space-x-2 px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg shadow-sm hover:bg-indigo-700 transition text-sm"
      >
        <i class="fas fa-plus"></i>
        <span>Create Event</span>
      </a>
      <% } %>

      <!-- Account / Login -->
      <% if (user) { %>
      <a
        href="/logout"
        class="flex items-center space-x-2 px-3 py-2 border border-gray-200 bg-white shadow-sm hover:bg-gray-100 text-gray-800 font-medium rounded-lg transition text-sm"
      >
        <i class="fas fa-user-circle"></i>
        <span>Log Out</span>
      </a>
      <% } else { %>
      <a
        href="/login"
        class="flex items-center space-x-2 px-3 py-2 border border-gray-200 bg-white shadow-sm hover:bg-gray-100 text-gray-800 font-medium rounded-lg transition text-sm"
      >
        <i class="fas fa-sign-in-alt"></i>
        <span>Login</span>
      </a>
      <% } %>
    </div>
  </div>

  <!-- Mobile Sidebar -->
  <div id="mobile-menu" class="md:hidden hidden px-2 pt-2 pb-3 space-y-1">
    <a
      href="/events"
      class="block px-3 py-2 rounded-md text-base font-medium <%= currentPath === '/events' ? 'bg-indigo-100 text-indigo-800' : 'text-gray-700 hover:bg-gray-100' %>"
    >
      Events
    </a>
    <% if (user && user.role === 'admin') { %>
    <a
      href="/attendee"
      class="block px-3 py-2 rounded-md text-base font-medium <%= currentPath === '/attendee' ? 'bg-indigo-100 text-indigo-800' : 'text-gray-700 hover:bg-gray-100' %>"
    >
      Attendees
    </a>
    <a
      href="/create-event"
      class="block px-3 py-2 rounded-md text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700"
    >
      + Create Event
    </a>
    <% } %> <% if (user) { %>
    <a
      href="/logout"
      class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100"
    >
      Logout
    </a>
    <% } else { %>
    <a
      href="/login"
      class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100"
    >
      Login
    </a>
    <% } %>
  </div>
</nav>
